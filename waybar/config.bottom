{
  "position": "bottom",
"background": "#0e0c17ee", // very dark with alpha
  "height": 30,
  "modules-left": ["custom/mpd"],
  "modules-right": ["network", "custom/updates", "memory", "temperature", "cpu", "custom/root", "custom/home", "clock"],

  "custom/date": {
    "format": "Û∞∏ó {}",
    "interval": 3600,
    "exec": "$HOME/bin/waybar-date.sh"
  },

  "custom/power": {
    "format": "Û∞ê•",
    "on-click": "$HOME/bin/waybar-power.sh"
  },

"clock": {
  "format": "ÔÄó {:%H:%M ÔÑ≥ %A, %d %B}",
  "interval": 60
},


  "custom/root": {
    "format": "ÔÇ† / {}",
    "exec": "df -h / | awk 'NR==2 {print $3\"/\"$2}'",
    "interval": 30
  },

  "custom/home": {
    "format": "ÔÄï {}",
    "exec": "df -h /home | awk 'NR==2 {printf \"%s/%s\", $3, $2}'",
    "interval": 30
  },

  "temperature": {
    "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
    "format": "Ôãâ {temperatureC}¬∞C",
    "critical-threshold": 80,
    "format-critical": "üî• {temperatureC}¬∞C"
  },

  "memory": {
    "format": "Û∞çõ {used:0.1f}G",
    "interval": 5
  },

  "cpu": {
    "format": "Ôíº {usage}%",
    "tooltip": false,
    "interval": 2
  },

  "custom/updates": {
    "interval": 1800,
    "exec": "checkupdates | wc -l",
    "format": "ÔÄô {}",
    "tooltip": "System Updates"
  },

  "custom/mpd": {
    "format": "{}",
    "max-length": 40,
    "exec": "~/.config/waybar/scripts/mpd-status.sh",
    "return-type": "json",
    "interval": 1,
    "on-click": "mpc toggle",
    "on-click-right": "mpc next && mpc play",
    "on-click-middle": "mpc prev"
  },

  "network": {
    "format-wifi": "Ôá´ {essid}",
    "format-ethernet": "Ôûñ Connected",
    "format-linked": "{ifname} (No IP) Ôûñ",
    "format-disconnected": "Û∞§Æ Disconnected",
    "format-alt": "{ifname}: {ipaddr}/{cidr}"
  }
}
